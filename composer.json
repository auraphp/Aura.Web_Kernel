{
    "name": "web-kernel",
    "type": "library",
    "require": {
        "php": ">=5.4.0",
        "aura/project-kernel": "~2.0",
        "aura/web-kernel": "~2.0",
        "aura/dispatcher": "~2.0",
        "aura/router": "~2.0",
        "aura/web": "~2.0"
    },
    "autoload": {
        "psr-4": {
            "Tarcha\\WebKernel\\_Config\\": "config/",
            "Tarcha\\WebKernel\\": "src/"
        }
    },
    "extra": {
        "aura": {
            "type": "kernel",
            "config": {
                "common": "Tarcha\\WebKernel\\_Config\\Common",
                "web-kernel-test2": "Tarcha\\WebKernel\\_Config\\WebKernelTest"
            }
        },
        "branch-alias": {
            "dev-develop-2": "2.0.x-dev"
        }
    },
    "scripts": {
        "test": "cd tests/kernel; ./phpunit.sh"
    }
}
